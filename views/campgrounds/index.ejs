<% layout('layouts/boilerplate')%>
    <% for (let campground of campgrounds) { %>
        <div class="row">
            <div class="col-6 offset-3">
                <div class="card mb-3">
                    <h5 class="card-title ml-3 mt-1">
                        <!-- <h4 class="ml-auto">name</h4> -->
                        <%= campground.title%>

                    </h5>
                    <% for (let image of campground.images) {%>

                        <img src="<%= image.url %>" class="card-img-top img-thumbnail">
                        <% } %>
                            <div class="card-body">
                                <p class="card-text">
                                    <%= campground.Status%>
                                </p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item text-muted">
                                    <%= campground.location%>
                                </li>

                            </ul>

                </div>
                <div>
                    <!-- <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                        class="bi bi-heart" viewBox="0 0 16 16">
                        <path
                            d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                    </svg> -->
                    <!-- <i class="bi bi-heart-fill"></i>
                    <a class="card-link btn btn-info" href="#">Like</a> -->

                    <button type="button" class="btn btn-success"><a href="<%= campground._id %> "
                            style="text-decoration: none; color: white">View Post</a></button>
                    <% if( currentUser && campground.owner.equals(currentUser._id)) {%>
                        <button type="button" class="btn btn-warning"><a href="<%= campground._id %>/edit "
                                style="text-decoration: none; color: white">Edit Post</a></button>
                        <form action="<%= campground._id%>?_method=DELETE" method="POST" class="d-inline">
                            <button class=" btn btn-danger">Delete</button>
                        </form>
                        <% } %>

                </div>
                <!-- <textarea class="mb-3 mt-3" name="" id="" cols="30" rows="3"></textarea> -->



            </div>

        </div>
        <hr>
        <br><br>
        <% } %>